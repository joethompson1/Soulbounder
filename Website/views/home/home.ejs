		// Function to debounce scroll events
		function debounce(func, delay) {
		  let timeoutId;
		  return function () {
		    clearTimeout(timeoutId);
		    timeoutId = setTimeout(func, delay);
		  };
		}

		// Function to handle scroll events
		function handleScroll() {
		  const scrollTop = $(window).scrollTop();
		  const transformValue = scrollTop > 0 ? 'perspective(800px) rotateY(0)' : 'perspective(800px) rotateY(-20deg)';
		  $('.landing__panel').css('transform', transformValue);
		}

		// Debounced scroll event handler
		const debouncedHandleScroll = debounce(handleScroll, 100); // Adjust the delay as needed

		// Attach scroll event listener
		$(window).on('scroll', debouncedHandleScroll);



